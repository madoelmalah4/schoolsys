@model IEnumerable<SchoolManagmentSys.Models.Enrollment>

@{
    ViewData["Title"] = "GetAllEnroll";
}

<h1>GetAllEnroll</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Grad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.student.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.course.Cname)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course.Cname)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Eid">Edit</a>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Eid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
